<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:isScrollContainer="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="700dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/item_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/back_arrow_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:src="@drawable/ic_keyboard_backspace_24dp"/>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/border"
                android:layout_alignParentBottom="true"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/title_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Default"
                        android:textSize="24sp"
                        android:textColor="@color/colorText"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"/>

                    <ImageView
                        android:id="@+id/favourite_button"
                        android:layout_width="34sp"
                        android:layout_height="34sp"
                        android:src="@drawable/ic_favorite_border_black_24dp"
                        android:layout_centerVertical="true"
                        android:layout_alignTop="@+id/title_text_view"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/item_price_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="18sp"
                    android:text="â‚¬ 69.99"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorLine"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp">

                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/spinner_color"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        app:ms_hint="Color"
                        app:ms_hintColor="@color/colorText"
                        app:ms_baseColor="@android:color/transparent"
                        app:ms_arrowColor="@color/colorText"
                        app:ms_highlightColor="@android:color/transparent"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"/>

                    <View
                        android:layout_width="1sp"
                        android:layout_height="match_parent"
                        android:background="@color/colorLine"/>

                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/spinner_size"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        app:ms_hint="Size"
                        app:ms_hintColor="@color/colorText"
                        app:ms_baseColor="@android:color/transparent"
                        app:ms_arrowColor="@color/colorText"
                        app:ms_highlightColor="@android:color/transparent"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/colorLine"/>

                <Button
                    android:id="@+id/add_to_cart_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="Add to cart"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@color/colorAccent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.23"/>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>
